@model ChallengeClub.Models.actList;
@{
    ViewData["Title"] = "Welcome Page";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/Style2.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />

</head>
<body>


    <div>
        <br>
        <h3>Today's Activities : </h3><br>

        <div>
        @using (Html.BeginForm("MemberActivity", "Home"))
        {
            for (int i = 0; i < Model.dailyActs.Count; i++)
            {
            <div class="gallery">
                <a href="">
                    @*<img src=@Model.dailyActs[i].activityImage height="200" width="200">*@
                </a>
                <div class="desc">@Html.CheckBoxFor(m => Model.dailyActs[i].isCheck) @Model.dailyActs[i].activityName<br>@Model.dailyActs[i].startTime </div>
            </div>
            }
                <br>
                <br>
                <div>
                    <input class="gradient-button gradient-button-1" type="submit" value="Select">
                </div>
        }       
        </div>
        <div>@ViewBag.selectAct</div>

        <hr>

        <div>
            <table>
                @using (Html.BeginForm("MemberActivity", "Home"))
                {


                    for (int i = 0; i < Model.dailyActs.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(m => Model.dailyActs[i].isCheck)
                                @Model.dailyActs[i].activityName
                                @Model.dailyActs[i].startTime
                                @Html.HiddenFor(m => Model.dailyActs[i].activityId)
                                @Html.HiddenFor(m => Model.dailyActs[i].activityName)
                                @Html.HiddenFor(m => Model.dailyActs[i].startTime)
                            </td>
                        </tr>
                    }
                    <tr><td></td></tr>
                    <tr><td><input type="submit" value="Select"></td></tr>
                }

            </table>
        </div>
        <div>@ViewBag.selectAct</div>

        <hr>
        <h3>Your activities : </h3><br>
        <div id="selectionScreen">
            <table class="table table-striped ">

                <tr>
                    <td>10 am</td>
                    <td>Bowling</td>
                    <td><a href="">Remove</a></td>
                </tr>
                <tr>
                    <td>3 pm</td>
                    <td>Volunteer</td>
                    <td><a href="">Remove</a></td>
                </tr>
                <tr>
                    <td>6 pm</td>
                    <td>Whitey's Dinner</td>
                    <td><a href="">Remove</a></td>
                </tr>

            </table>
        </div>
        <br>
        <a asp-action="Logout"><input class="gradient-button gradient-button-2" type="button" value="Confirm"></a>

    </>

</body>
</html>
