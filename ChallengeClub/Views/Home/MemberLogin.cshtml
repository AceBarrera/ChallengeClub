@model ChallengeClub.Models.Account;

@{
    ViewData["Title"] = "Log in";
}
<html>
<head>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Style1.css" />

    <script src="~/js/login.js"></script>
    <script>
        var memberNumber = "";
    
        function insert(num) {
            document.loginForm.screen.value = document.loginForm.screen.value + num;
            
        }

        function back() {
            var exp = document.loginForm.screen.value;
            document.loginForm.screen.value = exp.substring(0, exp.length - 1);
        }

        /*function login() {
